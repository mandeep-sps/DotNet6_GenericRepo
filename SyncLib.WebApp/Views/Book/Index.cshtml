@{
    ViewData["Title"] = "Collections";
}
<q><i><b>There is no friend as loyal as a book! </b></i></q>, <button onclick="loadBookForm()" class="btn btn-sm btn-outline-theme border-0"><b> <i class="fas fa-plus"></i> Add One</b></button>

<div class="modal fade" id="book-form-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content rounded-9">
            <div class="modal-header modal-header-theme">
                <h5 class="text-white"><strong id="book-form-modal-title"></strong></h5>
            </div>
            <div class="modal-body px-5">
                <form id="book-add-update-form" action="/" method="post">
                    <input type="hidden" name="Id" id="txt-book-id" />

                    <div class="row">
                        <label for="txt-book-name" class="col-sm-4 col-form-label">Name <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" name="BookName" id="txt-book-name" class="form-control form-control-sm " placeholder="Enter book name" />
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="txt-author-name" class="col-sm-4 col-form-label">Author <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" name="AuthorName" onchange="checkAuthor()" id="txt-author-name" class="form-control form-control-sm" list="dataList-authors" placeholder="Enter author name" />
                            <input type="hidden" name="AuthorId" id="txt-author-id" />
                            <dataList id="dataList-authors"></dataList>
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="txt-category-name" class="col-sm-4 col-form-label">Category <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" name="CategoryName" onchange="checkCategory()" id="txt-category-name" class="form-control form-control-sm" list="dataList-categories" placeholder="E.g.: Science/Novel/History" />
                            <input type="hidden" name="CategoryId" id="txt-category-id" />
                            <dataList id="dataList-categories"></dataList>
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="txt-language-name" class="col-sm-4 col-form-label">Language <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" name="LanguageName" onchange="checkLanguage()" id="txt-language-name" class="form-control form-control-sm" list="dataList-languages" placeholder="E.g.: Urdu/Hindi/English" />
                            <input type="hidden" name="LanguageId" id="txt-language-id" />
                            <dataList id="dataList-languages"></dataList>
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="txt-publish-date" class="col-sm-4 col-form-label">Published On</label>
                        <div class="col-sm-8">
                            <input type="text" name="PublishedOn" id="txt-publish-date" class="form-control form-control-sm" placeholder="E.g.: 1998" />
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <label for="txt-edition" class="col-sm-4 col-form-label">Edition  <span class="text-danger">*</span></label>
                        <div class="col-sm-8">
                            <input type="number" name="Edition" id="txt-edition" class="form-control form-control-sm" min="1" placeholder="E.g.: 3" />
                            <div class="user-input-feedback"></div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col text-end">
                            <button type="submit" class="btn btn-sm btn-theme "><i class="far fa-save"></i>&nbsp; Save</button>
                            <button type="button" class="btn btn-sm btn-outline-red" data-bs-dismiss="modal"> <i class="fas fa-times"></i>&nbsp; Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<hr />

<table id="table-books" class="table table-x table-responsive-md w-100">
    <thead>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Category</th>
            <th>Language</th>
            <th>Publish On</th>
            <th>Edition</th>
            <th>Price</th>
            <th class="doNotExport">Action</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Category</th>
            <th>Language</th>
            <th>Publish On</th>
            <th>Edition</th>
            <th>Price</th>
            <th class="doNotExport">Action</th>
        </tr>
    </tfoot>
</table>


@section Scripts{
    <script src="~/js/app-js/book-js.js"></script>
}