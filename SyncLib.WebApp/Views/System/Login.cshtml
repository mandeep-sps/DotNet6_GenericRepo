@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - The Hall of Learning</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/css/matt.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app-css/login.min.css" asp-append-version="true" />

</head>
<body>
    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row main-content bg-theme text-center">
            <div class="col-md-4 text-center company__info">
                <span class="company__logo"><h2><span class="fa fa-android"></span></h2></span>
                <h4 class="company_title"><i class='bx bx-library'></i> <br />The Hall of Learning</h4>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
                <div class="container-fluid">
                    <div class="row">
                        <h2 class="pt-4">Log In</h2>
                    </div>
                    <div class="row">
                        <form asp-controller="System" asp-action="SubmitLogin" control="" class="form-group">
                            <div class="row">
                                <input type="text" name="Username" id="txt-username" class="form__input" placeholder="Username">
                            </div>
                            <div class="row">
                                <!-- <span class="fa fa-lock"></span> -->
                                <input type="password" name="Password" id="txt-password" class="form__input" placeholder="Password">
                            </div>

                            <div class="row">
                                <input type="submit" value="Submit" class="btn">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




